<phone:PhoneApplicationPage xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
							xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
							xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
							xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
							xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
							xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
							xmlns:ShellExtension="clr-namespace:Codify.WindowsPhone.ShellExtension;assembly=Codify.WindowsPhone"
							xmlns:controls="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls"
							xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
							x:Class="Travlexer.WindowsPhone.Views.PlaceDetailsView"
							FontFamily="{StaticResource PhoneFontFamilyNormal}"
							FontSize="{StaticResource PhoneFontSizeNormal}"
							Foreground="{StaticResource PhoneForegroundBrush}"
							Style="{StaticResource PageDefault}"
							Orientation="Portrait"
							mc:Ignorable="d"
							d:DesignHeight="768"
							d:DesignWidth="480"
							shell:SystemTray.Opacity="{StaticResource OpacityShell}"
							shell:SystemTray.IsVisible="True"
							d:DataContext="{Binding PlaceDetailsViewModel, Source={StaticResource DesignTime}}">
	<phone:PhoneApplicationPage.Resources>
		<DataTemplate x:Key="PlaceIconFullModeItemTemplate">
			<Grid Margin="{StaticResource PhoneVerticalMargin}">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition/>
				</Grid.ColumnDefinitions>
				<Rectangle Width="48" Height="48" Fill="Blue" VerticalAlignment="Center"/>
				<Rectangle Style="{StaticResource IconRectangleStyle}" Fill="{Binding Key, Converter={StaticResource PlaceIconToBrushConverter}}" VerticalAlignment="Center"/>
				<TextBlock Text="{Binding Value}" Grid.Column="1" VerticalAlignment="Center" Margin="{StaticResource PhoneHorizontalMargin}" FontFamily="{StaticResource PhoneFontFamilyLight}" FontSize="{StaticResource PhoneFontSizeLarge}"/>
			</Grid>
		</DataTemplate>
		<DataTemplate x:Key="PlaceIconItemTemplate">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition/>
				</Grid.ColumnDefinitions>
				<Rectangle Width="48" Height="48" Fill="Blue" VerticalAlignment="Center"/>
				<Rectangle Style="{StaticResource IconRectangleStyle}" Fill="{Binding Key, Converter={StaticResource PlaceIconToBrushConverter}}" VerticalAlignment="Center"/>
				<TextBlock Text="{Binding Value}" Grid.Column="1" VerticalAlignment="Center" Margin="{StaticResource PhoneHorizontalMargin}"/>
			</Grid>
		</DataTemplate>
	</phone:PhoneApplicationPage.Resources>
	<ShellExtension:ApplicationBar.ApplicationBar>
		<ShellExtension:ApplicationBar Opacity="{StaticResource OpacityShell}" />
	</ShellExtension:ApplicationBar.ApplicationBar>
	<controls:Pivot>
		<controls:PivotItem Header="information">
			<Grid DataContext="{Binding Data}" >
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition/>
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="0.532*"/>
				</Grid.RowDefinitions>
				<Rectangle Style="{StaticResource IconRectangleStyle}" Fill="{StaticResource BrushIconHome}" VerticalAlignment="Center"/>
				<Rectangle Style="{StaticResource IconRectangleStyle}" Fill="{StaticResource BrushIconPin}" VerticalAlignment="Center" Grid.Row="1"/>
				<Rectangle Style="{StaticResource IconRectangleStyle}" Fill="{StaticResource BrushIconGlobe}" VerticalAlignment="Center" Grid.Row="2"/>
				<Rectangle Style="{StaticResource IconRectangleStyle}" Fill="{StaticResource BrushIconPhone}" VerticalAlignment="Center" Grid.Row="3"/>
				<Rectangle Style="{StaticResource IconRectangleStyle}" Fill="{StaticResource BrushIconStar}" VerticalAlignment="Center" Grid.Row="4"/>
				<TextBox TextWrapping="Wrap"
					Text="{Binding Address, Mode=TwoWay}"
					Style="{StaticResource TextBoxStyle}"
					IsReadOnly="True"
					GotFocus="SelectAllOnTextBoxGotFocus" d:LayoutOverrides="Height" Grid.Column="1" />
				<TextBox TextWrapping="Wrap"
					Text="{Binding Location, Mode=TwoWay}"
					IsReadOnly="True"
					Style="{StaticResource TextBoxStyle}"
					GotFocus="SelectAllOnTextBoxGotFocus" Grid.Row="1" d:LayoutOverrides="Height" Grid.Column="1" />
				<HyperlinkButton Content="{Binding WebSite, TargetNullValue=No website found}"
					IsEnabled="{Binding WebSite, Converter={StaticResource BooleanConverter}}" Grid.Row="2" d:LayoutOverrides="Height" Grid.Column="1" Margin="{StaticResource PhoneMargin}" />
				<HyperlinkButton Content="{Binding ContactNumber, TargetNullValue=No contact number found}"
					IsEnabled="{Binding ContactNumber, Converter={StaticResource BooleanConverter}}" Grid.Row="3" d:LayoutOverrides="Height" Grid.Column="1" Margin="{StaticResource PhoneMargin}" />
				<TextBox Text="{Binding Rating, StringFormat=Rating: \{0\}, TargetNullValue=No rating found}"
					IsEnabled="{Binding Rating, Converter={StaticResource BooleanConverter}}"
					IsReadOnly="True"
					IsHitTestVisible="False"
					Style="{StaticResource TextBoxStyle}" Grid.Row="4" d:LayoutOverrides="Height" Grid.Column="1" />
			</Grid>
		</controls:PivotItem>
		<controls:PivotItem Header="personalize">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition />
				</Grid.RowDefinitions>
				<TextBox TextWrapping="Wrap"
					Text="{Binding Data.Name, Mode=TwoWay}"
					GotFocus="SelectAllOnTextBoxGotFocus" d:LayoutOverrides="Height"/>
				<toolkit:ListPicker
					Margin="12,2,12,5" Grid.Row="1" ItemsSource="{Binding PlaceIcons}" SelectedItem="{Binding Data.Icon, Converter={StaticResource PlaceIconKeyValueConverter}, Mode=TwoWay}" FullModeItemTemplate="{StaticResource PlaceIconFullModeItemTemplate}" ItemTemplate="{StaticResource PlaceIconItemTemplate}"/>
				<toolkit:ListPicker
					Margin="12,-5,12,6" Grid.Row="2" />
				<TextBox x:Name="NotesTextBox"
					TextWrapping="Wrap"
					AcceptsReturn="True"
					Height="220"
					Text="{Binding Data.Notes, Mode=TwoWay}"
					InputScope="Text"
					VerticalAlignment="Top"
					d:LayoutOverrides="Height"
					GotFocus="SelectAllOnTextBoxGotFocus" Grid.Row="3"/>
				<TextBlock Text="Notes..."
					Foreground="{StaticResource PhoneTextBoxReadOnlyBrush}"
					FontStyle="Italic"
					HorizontalAlignment="Left"
					IsHitTestVisible="False" Margin="16,16,0,0"
					Visibility="{Binding Text, ConverterParameter=reverse, Converter={StaticResource VisibilityConverter}, ElementName=NotesTextBox}" VerticalAlignment="Top" Grid.Row="3"/>
			</Grid>
		</controls:PivotItem>
		<controls:PivotItem Header="nearby" />
	</controls:Pivot>
</phone:PhoneApplicationPage>
