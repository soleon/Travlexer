                                        <CompositeTransform ScaleY="0.7"
                                                            ScaleX="0.7" />
                                    </Path.RenderTransform>
                                </Path>
                            </Grid>
                        </Border>
                        <TextBlock Margin="20,-20,0,0">
                        <Run Text="triplexer"
                             FontFamily="{StaticResource PhoneFontFamilyLight}"
                             FontSize="{StaticResource PhoneFontSizeExtraExtraLarge}" />
                        <LineBreak />
                        <Run Text="your ultimate trip mapper"
                             FontSize="{StaticResource PhoneFontSizeMediumLarge}" />
                        </TextBlock>
                    </StackPanel>
                    <RichTextBox FontSize="{StaticResource PhoneFontSizeMediumLarge}"
                                 Padding="{StaticResource PhoneVerticalMargin}">
                        <Paragraph>
                            <Run Text="Version: " />
                            <Run Text="{Binding AppVersion}" />
                            <LineBreak />
                            <Run Text="Written by: " />
                            <Run Text="Leon Zhou" />
                            <LineBreak />
                            <Run Text="Contact: " />
                            <Hyperlink Command="{Binding CommandSendEmail}">
                                <Run Text="codifying@gmail.com" />
                            </Hyperlink>
                            <LineBreak />
                            <Run Text="Tech blog: " />
                            <Hyperlink Command="{Binding CommandNavigateToWebSite}">
                                <Run Text="codifying.wordpress.com" />
                            </Hyperlink>
                        </Paragraph>
                    </RichTextBox>
                </StackPanel>
            </controls:PivotItem>
        </controls:Pivot>
        <localControls:AdControl Grid.Row="1" />
    </Grid>
</phone:PhoneApplicationPage>